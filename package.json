{
  "name": "youtube-mp3-desktop",
  "private": true,
  "version": "1.0.0",
  "type": "commonjs",
  "main": "electron/main.js",
  "description": "A simple YouTube to MP3 Downloader",
  "author": "Kritsakorn Khamwiset",
  "scripts": {
    "dev": "vite",
    "build-ui": "vite build",
    "preview": "vite preview",
    "electron": "cross-env NODE_ENV=development electron .",
    "dev:electron": "concurrently \"npm run dev\" \"npm run electron\"",
    "dist": "npm run build-ui && electron-builder"
  },
  "build": {
    "asar": true,
    "appId": "com.youtubemp3.desktop",
    "productName": "YouTube Downloader",
    "directories": {
      "output": "dist-electron"
    },
    "win": {
      "target": "nsis",
      "icon": "build/favicon.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "installerLanguages": ["en_US", "th_TH"],
      "createDesktopShortcut": true
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "bin",
        "to": "bin",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.17",
    "ffmpeg-static": "^5.3.0",
    "sanitize-filename": "^1.6.3",
    "vue": "^3.5.24"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.1",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.0.0",
    "cross-env": "^7.0.3",
    "daisyui": "^5.5.5",
    "electron": "^32.0.0",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17",
    "vite": "npm:rolldown-vite@7.2.2"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@7.2.2"
  }
}
